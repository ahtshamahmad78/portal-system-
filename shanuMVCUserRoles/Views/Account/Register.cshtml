@model shanuMVCUserRoles.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<style>
    .stylish-textbox {
    border-radius: 25px;
    border: 2px solid #3498db;
    padding: 10px;
}

.stylish-dropdown {
    border-radius: 25px;
    border: 2px solid #3498db;
    padding: 8px;
    background-color: #f2f2f2;
}

.stylish-button {
    border-radius: 25px;
    padding: 10px 20px;
    font-weight: bold;
    background-color: #3498db;
    border: none;
    transition: all 0.3s ease;
}

.stylish-button:hover {
    background-color: #2980b9;
    color: white;
}

</style>

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control stylish-textbox", placeholder = "Enter your email" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control stylish-textbox", placeholder = "Enter your username" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control stylish-textbox", placeholder = "Enter your password" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control stylish-textbox", placeholder = "Confirm your password" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("User Role", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("UserRoles", (SelectList)ViewBag.Name, " ", new { @class = "form-control stylish-dropdown" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary stylish-button" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
